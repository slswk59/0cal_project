<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- BoardDaoImp 빈 선언 -->
	<bean id="productDao" class="shopping.dao.ProductDaoImp">
		<property name="sqlSession" ref="sqlSession" />
	</bean>

	<!-- BoardServiceImp 빈 선언 -->
	<bean id="productService" class="shopping.service.ProductServiceImp">
		<property name="productDao" ref="productDao" />
	</bean>

	<!--  BoardController 빈 선언 -->
	<bean class="shopping.controller.ProductController">
		<property name="productService" ref="productService" />
	</bean>

	
</beans>
